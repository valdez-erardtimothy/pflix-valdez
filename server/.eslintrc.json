{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "engines": {
        "node": ">=8.3.0"
    },
    "extends": [
        "eslint:recommended",
        "plugin:node/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-unused-vars": [
            "error",
            {
                "argsIgnorePattern": "(req)|(res)|(next)"
            }
        ]
    }
}